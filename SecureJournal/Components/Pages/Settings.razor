@page "/Settings"

<div class="settings-page">
    <h1> Settings</h1>

    <div class="settings-card">
        <h3>Security</h3>
        <input type="password" placeholder="Change PIN" />
        <button>Update PIN</button>
    </div>

    <div class="settings-card">
        <h3>Appearance</h3>
        <label class="toggle">
            <input type="checkbox" />
            <span>Enable Dark Mode</span>
        </label>
    </div>

    <div class="settings-card">
        <h3>Data</h3>
        <button class="secondary">Export Journal (PDF)</button>
    </div>
</div>